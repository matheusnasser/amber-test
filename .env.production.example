# Production Environment Variables for Render.com
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Database (Render.com will auto-populate this from the PostgreSQL service)
DATABASE_URL="postgresql://postgres:password@postgres:5432/postgres?schema=public"

# PostgreSQL Credentials (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# LLM API Keys
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."

# JWT Secret (generate a random string for production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# API URL (for Next.js to call the API)
NEXT_PUBLIC_API_URL="https://supplier-negotiation-api.onrender.com"
